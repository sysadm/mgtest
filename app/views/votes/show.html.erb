<%- model_class = Vote -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:vote_time) %>:</strong></dt>
  <dd><%= @vote.vote_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:validity) %>:</strong></dt>
  <dd><%= @vote.validity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:candidate_id) %>:</strong></dt>
  <dd><%= @vote.candidate_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:campaign_id) %>:</strong></dt>
  <dd><%= @vote.campaign_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              votes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vote_path(@vote), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vote_path(@vote),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
